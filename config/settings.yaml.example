# Pinnacle AI Configuration

# Agent Configuration
agents:
  available_agents:
    - planner
    - researcher
    - coder
    - creative
    - robotic
    - scientist
    - philosopher
    - meta_agent

# Neurosymbolic Configuration
neurosymbolic:
  enabled: true
  logic_engine:
    max_rules: 1000
  causal_graph:
    max_nodes: 5000

# Hyper-Modal Configuration
hyper_modal:
  enabled: true
  supported_modalities:
    - text
    - image
    - audio
    - video

# Memory Configuration
memory:
  enabled: true
  max_memories: 10000
  association_strength: 0.7

# Self-Evolution Configuration
self_evolution:
  enabled: true
  improvement_interval: 3600  # seconds
  auto_optimize: true

# LLM Configuration
llm:
  provider: "openai"  # or "anthropic", "local", etc.
  models:
    - "gpt-4"
    - "gpt-3.5-turbo"
  api_key: "your_api_key_here"
  temperature: 0.7
  max_tokens: 2000

# Logging Configuration
logging:
  level: "INFO"
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file: "logs/pinnacle_ai.log"

# Tools Configuration
tools:
  web_search:
    enabled: true
    provider: "google"  # or "bing", "duckduckgo"
    api_key: "your_api_key_here"
  code_executor:
    enabled: true
    sandbox: true
    timeout: 30
  image_gen:
    enabled: true
    provider: "openai"  # or "stability", "midjourney"
    api_key: "your_api_key_here"
  audio_gen:
    enabled: true
    provider: "elevenlabs"  # or "openai"
    api_key: "your_api_key_here"

