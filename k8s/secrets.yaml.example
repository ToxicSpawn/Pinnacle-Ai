# Example secrets file - DO NOT COMMIT THIS FILE
# Create actual secrets using:
# kubectl create secret generic bot-secrets --from-literal=telegram-token='YOUR_TOKEN' ...

apiVersion: v1
kind: Secret
metadata:
  name: bot-secrets
type: Opaque
stringData:
  telegram-token: "YOUR_TELEGRAM_BOT_TOKEN"
  telegram-chat-id: "YOUR_CHAT_ID"
  kraken-api-key: "YOUR_KRAKEN_API_KEY"
  kraken-api-secret: "YOUR_KRAKEN_SECRET"
  binance-api-key: "YOUR_BINANCE_API_KEY"
  binance-api-secret: "YOUR_BINANCE_SECRET"
  coinbase-api-key: "YOUR_COINBASE_API_KEY"
  coinbase-api-secret: "YOUR_COINBASE_SECRET"
  coinbase-api-passphrase: "YOUR_COINBASE_PASSPHRASE"
  koinly-api-key: "YOUR_KOINLY_API_KEY"

